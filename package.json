{
  "name": "custompics",
  "version": "1.0.0",
  "description": "Aplicativo de electron para visualización de imagenes",
  "main": "src/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron src/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package-mac": "electron-forge package --platform=darwin --arch=x64",
    "package-win": "electron-forge package --platform=win32 --arch=ia32",
    "package-linux": "electron-forge package --platform=linux --arch=x64",
    "make": "electron-forge make"
  },
  "keywords": [],
  "author": "Jasan Hernández <jasan814@gmail.com> (https://twitter.com/jasan_azael)",
  "license": "ISC",
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "devtron": "^1.4.0",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "crypto-js": "^4.0.0",
    "electron-compile": "^6.4.4",
    "electron-debug": "^3.0.1",
    "electron-settings": "^3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "filesize": "^6.1.0",
    "fs.extra": "^1.3.2",
    "is-image": "^3.0.0"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "asar": true,
        "icon": "./src/assets/icons/tray-icon"
      },
      "electronWinstallerConfig": {
        "name": "custompics",
        "authors": "Jasan Hernández"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "custompics"
      }
    }
  }
}
